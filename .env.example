# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to 0 for production)
DEBUG=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Django secret key (REQUIRED - generate a new one for production)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated, REQUIRED for production)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CSRF trusted origins (comma-separated)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# CORS allowed origins (comma-separated, REQUIRED for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Force HTTPS (set to 1 for production)
FORCE_HTTPS=0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Option 1: Use DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/rms_db

# Option 2: Use individual PostgreSQL settings
PG_NAME=rms_db
PG_USER=postgres
PG_PASSWORD=password
PG_HOST=localhost
PG_PORT=5432

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis URL for caching and sessions (recommended for production)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email backend settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
DEFAULT_FROM_EMAIL=noreply@yoursite.com

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# RESERVATIONS / DEPOSITS
# =============================================================================
# Flat deposit per reservation (preferred). If set > 0, this amount is charged
# regardless of party size, and later credited to the food order.
RESERVATION_DEPOSIT_FLAT_TOTAL=5
# Per-seat deposit (legacy). Used only when flat total is 0.
# Set to 0 if you want flat deposit behavior.
RESERVATION_DEPOSIT_PER_SEAT=0

# =============================================================================
# THIRD-PARTY DELIVERY SERVICES
# =============================================================================
# UberEats API
UBEREATS_CLIENT_ID=your_ubereats_client_id
UBEREATS_CLIENT_SECRET=your_ubereats_client_secret
UBEREATS_WEBHOOK_SECRET=your_ubereats_webhook_secret
UBEREATS_ENVIRONMENT=sandbox

# DoorDash API
DOORDASH_DEVELOPER_ID=your_doordash_developer_id
DOORDASH_KEY_ID=your_doordash_key_id
DOORDASH_SIGNING_SECRET=your_doordash_signing_secret
DOORDASH_ENVIRONMENT=sandbox

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 Configuration (optional)
USE_S3_STORAGE=0
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your_custom_domain

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Sentry for error monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application version for monitoring
APP_VERSION=1.0.0

# Enable JSON logging (set to 1 for production)
USE_JSON_LOGGING=0

# Log database queries (set to 1 for debugging)
LOG_DB_QUERIES=0
LOG_SQL=0

# =============================================================================
# API CONFIGURATION
# =============================================================================
# DRF throttle rates
DRF_ANON_THROTTLE_RATE=100/hour
DRF_USER_THROTTLE_RATE=1000/hour

# JWT token lifetimes (in minutes/days)
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug toolbar (development only)
ENABLE_DEBUG_TOOLBAR=0

# Enable django-silk profiling (staging only)
ENABLE_SILK=0

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Custom admin URL (change for security)
ADMIN_URL=admin/

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session cookie age (in seconds, default: 7 days)
SESSION_COOKIE_AGE=604800

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
# Site URL and domain
SITE_URL=http://localhost:8000
DOMAIN=localhost:8000
